{
  "name": "E-P-M",
  "version": "0.2.2",
  "description": "Electron Photo Manager",
  "main": "main.js",
  "scripts": {
    "dev:start": "cross-env NODE_ENV=development electron .",
    "dev:webpack": "cross-env NODE_ENV=development webpack --watch",
    "release:linux": "cross-env NODE_ENV=production webpack --progress && electron-builder -l --x64",
    "release:win": "cross-env NODE_ENV=production webpack --progress && electron-builder -w --x64",
    "test": "mocha --compilers js:babel-core/register ./tests/**/*",
    "test:single": "mocha --compilers js:babel-core/register"
  },
  "build": {
    "appId": "com.cwxyz007.E-P-M",
    "productName": "E-P-M",
    "files": [
      "build/**/*",
      "app/build",
      "app/assets",
      "app/main",
      "app/index.html",
      "main.js"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "category": "Utility",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": "'https://github.com/cwxyz007/electron-PM.git'",
  "author": "cwxyz007",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "electron": "^1.8.2",
    "better-sqlite3": "^4.1.0",
    "electron-settings": "^3.1.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "electron-builder": "^20.4.1",
    "electron-devtools-installer": "^2.2.3",
    "electron-rebuild": "^1.7.3",
    "electron-reload": "^1.2.2",
    "file-loader": "^1.1.6",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "mocha": "^5.0.1",
    "node-sass": "^4.7.2",
    "prop-types": "^15.6.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9"
  }
}
