{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "mixin",
        "extend",
        "content",
        "include",
        ":vertical"
      ]
    }],
    "selector-pseudo-class-no-unknown" : [true, {
      "ignorePseudoClasses": [
        "vertical",
        "horizontal"
      ]
    }]
  },
  "ignoreFiles": [
    "*.MD"
  ]
}
